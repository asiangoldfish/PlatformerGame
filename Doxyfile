# Build related settings
RECURSIVE              = YES

# Input files
INPUT                  = src include
FILE_PATTERNS          = *.cpp *.h

# Output settings
GENERATE_HTML          = YES
HTML_OUTPUT            = html

# Graphviz related settings for UML generation
